{% extends 'base.html.twig' %}

{% block title %}Facture index{% endblock %}

{% block body %}
    <h1>Facture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Dat_factAt</th>
                <th>Mont_fact</th>
                <th> Nom emp</th>
                <th> Nom cli</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
                <td>{{ facture.dat_factAt}}</td>
                <td>{{ facture.mont_fact }}</td>
                    
                <td>{{ facture.nom_emp }}</td>
                <td>{{ facture.nom_cli }}</td>
                <td>
                    <a href="{{ path('app_admin_facture_show', {'id': facture.id}) }}">show</a>
                    <a href="{{ path('app_admin_facture_edit', {'id': facture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_facture_new') }}">Create new</a>
{% endblock %}

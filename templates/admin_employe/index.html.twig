{% extends 'base.html.twig' %}

{% block title %}Employe index{% endblock %}

{% block body %}
    <h1>Employe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_emp</th>
                <th>Pre_emp</th>
                <th>Tel_emp</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for employe in employes %}
            <tr>
                <td>{{ employe.id }}</td>
                <td>{{ employe.NomEmp }}</td>
                <td>{{ employe.PreEmp }}</td>
                <td>{{ employe.telEmp }}</td>
                <td>
                    <a href="{{ path('app_admin_employe_show', {'id': employe.id}) }}">show</a>
                    <a href="{{ path('app_admin_employe_edit', {'id': employe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_employe_new') }}">Create new</a>
{% endblock %}

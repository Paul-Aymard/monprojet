<div class="card">
<div class="card-body">
    <h1 class="card-title">Créér un client</h1>

    <!-- Horizontal Form -->
    {{ form_start(form) }}

        <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Nom</label>
            <div class="col-sm-10">
            {{ form_widget(form.Nom_cli) }}   
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputprenom" class="col-sm-2 col-form-label">Prenom</label>
            <div class="col-sm-10">
                {{ form_widget(form.Pre_cli) }}
            </div>
        </div>

        <div class="row mb-3">
            <label for="inputcontact" class="col-sm-2 col-form-label">Contact</label>
            <div class="col-sm-10">
                {{ form_widget(form.Tel_cli) }}
            </div>
        </div>

        <div class="row mb-3">
            <label for="inputdate" class="col-sm-2 col-form-label"> Sexe</label>
            <div class="col-sm-10">
                {{ form_widget(form.Sex_cli) }}
            </div>
        </div>
        <div class="text-center">
            <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
            <button type="reset" class="btn btn-secondary">Reset</button>
        </div>
    {{ form_end(form) }}
    <!-- End Horizontal Form -->
    

</div>
</div> 


